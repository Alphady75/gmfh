{{ form_start(form, {attr: {class: 'mb-4'}}) }}

<div class="twm-bnr-search-bar mb-2">
  <div class="row">
    <!--Title-->
    <div class="form-group col-sm-5">
      <label>Quoi</label>
      {{ form_widget(form.query) }}
    </div>
    <div class="form-group col-sm-5">
      <label>Localisation</label>
      {{ form_widget(form.localisation) }}
    </div>

    <!--Find job btn-->
    <div class="form-group col-sm-2 text-end">
      <button type="submit" class="custom-button-light">
        <span class="btnFetch d-block w-100 text-center">
          {{ button_label|default('Trier') }}&nbsp;
          <i class="fa fa-filter"></i>
        </span>
      </button>
    </div>

  </div>
</div>

<div class="bg-white p-2 radius">
  <div class="radius site-bg-white filter-form mb-2">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Secteurs d'activité
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.secteur) }}
      </div>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Compte
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.compte) }}
      </div>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Statut du compte
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.isVerified) }}
      </div>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Langues
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.langues) }}
      </div>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Compétences
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.competences) }}
      </div>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Services proposés
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.services) }}
      </div>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Périmettre
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {{ form_widget(form.villes) }}
      </div>
    </div>
    <div class="dropdown filter-form-select">
      {{ form_widget(form.limit) }}
    </div>
  </div>
  
  <div class="product-filter-wrap d-flex justify-content-between align-items-end pb-0">
    <span class="woocommerce-result-count-left">
      Affichage de {{ users|length }} compte{{ users|length > 1 ? 's' : '' }} utilisateur{{ users|length > 1 ? 's' : '' }}
    </span>
  </div>
</div>

{{ form_end(form) }}
