{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offre.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ offre.slug }}</td>
            </tr>
            <tr>
                <th>IntitulePoste</th>
                <td>{{ offre.IntitulePoste }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ offre.localisation }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ offre.dateDebut ? offre.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>InfosContrat</th>
                <td>{{ offre.infosContrat }}</td>
            </tr>
            <tr>
                <th>EffectifRecrutement</th>
                <td>{{ offre.effectifRecrutement }}</td>
            </tr>
            <tr>
                <th>LieuTravail</th>
                <td>{{ offre.lieuTravail }}</td>
            </tr>
            <tr>
                <th>Langues</th>
                <td>{{ offre.langues ? offre.langues|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>TypeContrat</th>
                <td>{{ offre.typeContrat ? offre.typeContrat|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Complet</th>
                <td>{{ offre.complet ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Boosted</th>
                <td>{{ offre.boosted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ offre.status }}</td>
            </tr>
            <tr>
                <th>AnneeExperience</th>
                <td>{{ offre.anneeExperience }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ offre.salaire }}</td>
            </tr>
            <tr>
                <th>Qualification</th>
                <td>{{ offre.qualification }}</td>
            </tr>
            <tr>
                <th>Periodicite</th>
                <td>{{ offre.periodicite }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ offre.dateFin ? offre.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Devise</th>
                <td>{{ offre.devise }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ offre.created ? offre.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ offre.updated ? offre.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_offres') }}">back to list</a>

    <a href="{{ path('admin_offre_edit', {'id': offre.id}) }}">edit</a>

