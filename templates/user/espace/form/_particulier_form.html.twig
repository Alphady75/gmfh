<div class="card-profile bg-white radius mb-4">
	<div class="card-profile-img-top">
		<div class="d-flex justify-content-between align-items-end">
			<span class="text-light">Membre
				{{ app.user.created|ago }}</span>
		</div>
	</div>
	<div class="card-profile-body d-flex justify-content-between align-items-end d-block-sm">
		<div>
			<label for="profil_particulier_photoFile_file" class="card-profile-avatar">
				<img src="{% if app.user.photo %}{{ vich_uploader_asset(app.user, 'photoFile' ) }}{% else %}{{ asset('img/avatar.jpg') }}{% endif %}" class="rounded-circle photo img-fluid" alt="Avatar de compte">
				<label class="btn" for="profil_particulier_photoFile_file">
					<i class="text-blue fa fa-camera"></i>
				</label>
			</label>
			<div class="hidden-file">{{ form_widget(form.photoFile) }}</div>
			{{ form_errors(form.photoFile) }}
			<h5>{{ app.user }}</h5>
			<span>{{ app.user.email }}</span>
		</div>
		<div>
			<span class="custom-badge bg-{{ app.user.isVerified ? 'success' : 'warning' }} text-light status">Email
				{{ app.user.isVerified ? 'confirmer' : 'non confirmer' }}
			</span>
		</div>
	</div>
</div>

<div class="panel panel-default radius">
	<div class="panel-heading wt-panel-heading p-a20">
		<h4 class="panel-tittle m-a0">Informations individuelles</h4>
	</div>
	<div class="panel-body wt-panel-body p-a20 m-b30 bg-white radius">
		<div class="row">
			<div class="col-sm-6">{{ form_row(form.nom) }}</div>
			<div class="col-sm-6">{{ form_row(form.prenom) }}</div>
			<div class="col-sm-12">{{ form_row(form.apropo) }}</div>
		</div>
	</div>
</div>

<div class="panel panel-default radius">
	<div class="panel-heading wt-panel-heading p-a20">
		<h4 class="panel-tittle m-a0">Coordonnées</h4>
	</div>
	<div class="panel-body wt-panel-body p-a20 m-b30 bg-white radius">
		<div class="form-group">
			<label>Téléphone</label>
			<div class="ls-inputicon-box">
				{{ form_widget(form.telephone) }}
				<i class="fs-input-icon fa fa-phone"></i>
			</div>
		</div>
		{{ form_errors(form.telephone) }}

		<div class="form-group">
			<label>Localisation</label>
			<div class="ls-inputicon-box">
				{{ form_widget(form.localisation) }}
				<i class="fs-input-icon fa fa-map-marker-alt"></i>
			</div>
		</div>
		{{ form_errors(form.localisation) }}
	</div>
</div>

<div class="panel panel-default radius">
	<div class="panel-heading wt-panel-heading p-a20">
		<h4 class="panel-tittle m-a0">Informations supplémentaires</h4>
	</div>
	<div class="panel-body wt-panel-body p-a20 m-b30 bg-white radius">
		{{ form_row(form.competences) }}
		{{ form_row(form.services) }}
		{{ form_row(form.villes) }}
	</div>
</div>

